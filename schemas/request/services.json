{
  "$id": "http://gov.uk/schema/v1.0.0/request/services",
  "_name": "request.services",
  "title": "Create new service",
  "description": "Request schema for creating a new service",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "service_name": {
          "type": "string"
        },
        "created_by": {
          "type": "string"
        },
        "configuration": {
          "$ref": "config.service"
        },
        "locale": {
          "$ref": "service.locale"
        },
        "pages": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      },
      "required": [
        "service_name",
        "created_by",
        "configuration",
        "pages"
      ],
      "additionalProperties": false
    }
  },
  "required": ["metadata"]
}
